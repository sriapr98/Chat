<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    xmlns:android="http://schemas.android.com/apk/res/android">
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorRed"
    android:layout_gravity="center"
    tools:context="com.example.srikkanth.chat.Fragments.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="20dp"
        android:id="@+id/email_row"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email_text"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="Email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Enter your Email"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:background="@drawable/round_border"
            android:layout_below="@+id/email_text"
            android:layout_marginTop="10dp"
            android:id="@+id/email" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_row"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/password_text"
            android:textColor="#fff"
            android:textSize="20sp"
            android:text="Password"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/password_text"
            android:hint="Enter your password"
            android:background="@drawable/round_border"
            android:id="@+id/password"
            android:inputType="textPassword"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:id="@+id/display_name_row"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/name_text"
            android:text="DisplayName"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/round_border"
            android:padding="5dp"
            android:hint="Enter your displayname"
            android:layout_below="@+id/name_text"
            android:id="@+id/display_name_edit_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:id="@+id/next_button"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register"
            android:visibility="visible"
            android:text="Register"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:visibility="visible"
            android:id="@+id/login_user"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register"
            android:visibility="gone"
            android:id="@+id/register_user"/>
    </LinearLayout>
</TableLayout>
</FrameLayout>
</ScrollView>